// la fonction machin

fonction machin()
lexique
	a : entier
	b : entier
	(*
		Fin du lexique de machin
	*)
début
	a <- 1
	b <- 2 + a + 2
fin

// la fonction bidule

fonction bidule()
lexique
	a : entier
	b : entier
	c : entier
	d : entier
	(*
		Fin du lexique de bidule
	*)
début
	a <- 1
	b <- -352.1
	c <- +124123.123
	d <- 123
fin

// la fonction truc

fonction truc()
lexique
	e : entier
	f : entier
	g : entier
	h : entier
	(*
		Fin du lexique de truc
